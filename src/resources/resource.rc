    BEGIN
        BLOCK "040904B0"
        BEGIN
            VALUE "CompanyName",      "Open Source"
            VALUE "FileDescription",  "QNote"
            VALUE "FileVersion",      VER_STRING
            VALUE "InternalName",     "QNote"
            VALUE "LegalCopyright",   "Copyright (c) 2026 - MIT License"
            VALUE "OriginalFilename", "QNote.exe"
            VALUE "ProductName",      "QNote"
            VALUE "ProductVersion",   VER_STRING
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x0409, 0x04B0
    END
END

