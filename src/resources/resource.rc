    DEFPUSHBUTTON   "&Find Next",IDC_FIND_NEXT,200,7,53,14
    PUSHBUTTON      "Cancel",IDCANCEL,200,24,53,14
    
    GROUPBOX        "Direction",IDC_STATIC,7,28,90,32
    AUTORADIOBUTTON "&Up",IDC_DIRECTION_UP,14,40,35,10
    AUTORADIOBUTTON "&Down",IDC_DIRECTION_DOWN,54,40,38,10
    
    AUTOCHECKBOX    "Match &case",IDC_MATCH_CASE,105,33,55,10
    AUTOCHECKBOX    "Wrap ar&ound",IDC_WRAP_AROUND,105,46,60,10
    AUTOCHECKBOX    "Regular e&xpression",IDC_USE_REGEX,7,65,85,10
END

